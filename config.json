{
  "paths": {
    "calypso_install": "/eos/user/c/chiw/FASER/Alignment/run/",
    "pede_install": "/afs/cern.ch/user/c/chiw/public/faser-utils/pede/",
    "reco_env_script": "/afs/cern.ch/user/c/chiw/condor/FASER-Alignment/reco_condor_env.sh",
    "millepede_env_script": "/afs/cern.ch/user/c/chiw/condor/FASER-Alignment/millepede_condor_env.sh",
    "work_dir": "/afs/cern.ch/user/c/chiw/condor/FASER-Alignment/",
    "eos_output_dir": "/eos/user/c/chiw/FASER/Alignment/Alignment-Shunliang/"
  },
  "htcondor": {
    "requirements": "(Machine =!= LastRemoteHost) && (OpSysAndVer =?= \"AlmaLinux9\")",
    "reco": {
      "job_flavour": "workday",
      "request_cpus": 1,
      "request_memory": "2 GB",
      "request_disk": "2 GB",
      "max_retries": 3
    },
    "millepede": {
      "job_flavour": "espresso",
      "request_cpus": 1,
      "request_memory": "256 MB",
      "request_disk": "32 MB",
      "max_retries": 2
    }
  },
  "alignment": {
    "default_iterations": 10,
    "polling_interval_seconds": 300
  },
  "storage": {
    "use_eos_for_output": true,
    "keep_intermediate_root_files": true,
    "keep_alignment_constants": true,
    "cleanup_reco_temp_files": true
  }
}
