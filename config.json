{
  "paths": {
    "calypso_install": "/eos/home-s/shunlian/Alignment/install",
    "pede_install": "/eos/home-s/shunlian/Environments/apps/Millepede-II/V04-17-05",
    "reco_env_script": "/eos/home-s/shunlian/Alignment/env.sh",
    "millepede_env_script": "/eos/home-s/shunlian/Alignment/myAlign/py_env.sh",
    "work_dir": "/afs/cern.ch/user/s/shunlian/alignment",
    "eos_output_dir": "/eos/home-s/shunlian/Alignment/data"
  },
  "htcondor": {
    "requirements": "(Machine =!= LastRemoteHost) && (OpSysAndVer =?= \"AlmaLinux9\")",
    "reco": {
      "job_flavour": "longlunch",
      "request_cpus": 2,
      "request_memory": "4 GB",
      "request_disk": "8 GB",
      "max_retries": 3
    },
    "millepede": {
      "job_flavour": "espresso",
      "request_cpus": 1,
      "request_memory": "2 GB",
      "request_disk": "2 GB",
      "max_retries": 2
    }
  },
  "alignment": {
    "default_iterations": 10,
    "polling_interval_seconds": 300
  },
  "storage": {
    "use_eos_for_output": true,
    "keep_intermediate_root_files": true,
    "keep_alignment_constants": true,
    "cleanup_reco_temp_files": true
  }
}