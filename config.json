{
  "raw": {
    "year": 2025,
    "run": 20007,
    "files": "201-250",
    "iters": 10,
    "format": "Y{year}_R{run}_F{files}",
    "fourst": false,
    "threest": true
  },
  "dag": {
    "dir": "/afs/cern.ch/user/s/shunlian/alignment/dag_files/{format}",
    "file": "alignment.dag",
    "recoexe": "runAlignment.sh",
    "recoenv": "reco_env.sh",
    "milleexe": "runMillepede.sh",
    "milleenv": "mille_env.sh",
    "iter": {
      "dir": "iter{iter}",
      "recojob": "reco_iter{iter}_{file}",
      "recosub": "reco_iter{iter}_{file}.sub",
      "millejob": "millepede_iter{iter}",
      "millesub": "millepede_iter{iter}.sub",
      "logs": {
        "dir": "logs_iter{iter}",
        "recoerr": "reco_iter{iter}_{file}.err",
        "recolog": "reco_iter{iter}_{file}.log",
        "recoout": "reco_iter{iter}_{file}.out",
        "milleerr": "millepede_iter{iter}.err",
        "millelog": "millepede_iter{iter}.log",
        "milleout": "millepede_iter{iter}.out"
      }
    }
  },
  "data": {
    "dir": "/eos/home-s/shunlian/Alignment/data/{format}",
    "iter": {
      "dir": "iter{iter}",
      "reco": "1reco",
      "kfalign": "2kfalignment",
      "millepede": "3millepede"
    }
  },
  "tpl": {
    "dir": "/afs/cern.ch/user/s/shunlian/alignment/templates",
    "recosub": "reco.sub.tpl",
    "recoexe": "runAlignment.sh",
    "recoenv": "reco_env.sh",
    "millesub": "mille.sub.tpl",
    "milleexe": "runMillepede.sh",
    "milleenv": "mille_env.sh",
    "inputforalign": "inputforalign.txt"
  },
  "src": {
    "dir": "/afs/cern.ch/user/s/shunlian/alignment"
  },





  "discarded": {
    "paths": {
      "calypso_install": "/eos/home-s/shunlian/Alignment/install",
      "pede_install": "/eos/home-s/shunlian/Environments/apps/Millepede-II/V04-17-05",
      "reco_env_script": "/eos/home-s/shunlian/Alignment/env.sh",
      "millepede_env_script": "/afs/cern.ch/user/s/shunlian/alignment/py_env.sh",
      "work_dir": "/afs/cern.ch/user/s/shunlian/alignment",
      "eos_output_dir": "/eos/home-s/shunlian/Alignment/data"
    },
    "htcondor": {
      "requirements": "(Machine =!= LastRemoteHost) && (OpSysAndVer =?= \"AlmaLinux9\")",
      "reco": {
        "job_flavour": "workday",
        "request_cpus": 2,
        "request_memory": "4 GB",
        "request_disk": "8 GB",
        "max_retries": 3
      },
      "millepede": {
        "job_flavour": "workday",
        "request_cpus": 1,
        "request_memory": "2 GB",
        "request_disk": "2 GB",
        "max_retries": 2
      }
    },
    "alignment": {
      "default_iterations": 10,
      "polling_interval_seconds": 300
    },
    "storage": {
      "use_eos_for_output": true,
      "keep_intermediate_root_files": true,
      "keep_alignment_constants": true,
      "cleanup_reco_temp_files": true
    }
  }
}